{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "lib": ["ES2015"],
      "emitDecoratorMetadata": true,  // Required for TypeORM
      "experimentalDecorators": true,  // Required for TypeORM
      "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }

  